KEYS = "a appSecret appVersion
       clientId deviceId lang os
       postData sid time ttid v"


NeedSidAPIList =
  # ---- share -----
  'sign': 'airtake.share.getsourcesign'
  'user': 'airtake.user.get.info'
  # ---- PC -----


APIList =
  # ---- share -----
  'userIndex': 'airtake.user.index'
  'regUser': 'airtake.user.register'
  'getMenu': 'airtake.menu.get'
  'getShare': 'airtake.h5.get.share'
  'getStorageList': 'airtake.storage.get.list'
  # ---- PC -----
  'feedback': 's.pc.sendfeedback'

methods = {}

for own alias, name of NeedSidAPIList
  methods[alias] = {name, v: '1.0', sid: true}

for own alias, name of APIList
  methods[alias] = {name, v: '1.0'}

module.exports =
  methods: methods
  clientId: '32'
  deviceId: 'pc'
  ttid: 'nodejs'
  # lang: 'zh_CN'
  appVersion: '0.6'
  os: require('os').platform()

  # 签名名称数组 用于签名顺序
  withSid: KEYS.split(/\s+/).sort()
  withoutSid: KEYS.replace('sid', '').split(/\s+/).sort()
